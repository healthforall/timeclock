%h1 #{@name}'s time sheet!
%h1 For payperiod #{@start_date} to #{@end_date}

%div#clockinquestionmark{ :style => "display :none"}= @employee.clockin?
%h1 Total: #{@total_hours}
%br
  -if @uid == session[:user_uid]
    %button{:id => "clockin" , :style => "display: inline" } Clock In
    %div{:style=> "display: inline; position: absolute; left: 360px"}
      = link_to 'Export Timesheet', employee_timesheet_show_path(@employee, timesheet_id: 1, format: "xls"), :id => "export"
%div{:style=>"width:500%"}
  %div.col
    = render :partial => "timesheet_table", :locals => {:days => @first_week , :start => 1 }
  %div.col.right
    = render :partial => "timesheet_table", :locals => {:days => @second_week ,:start => (@timesheet.days.length/2)+1}
%button{:id => "submit", :style => "display: block"} Submit Changes
